@import 'base/0-fonts'

@import '../_css/bootstrap.min.css'

@import 'base/1-base'

@import 'base/2-header'

#main
	padding 0 0 60px
	color #fff
	background-color: #19789F
	background-image url(../img/backs/main.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	min-height calc(100vh - 225px)
.main-title
	font-size: 32px
	font-family: Gd
	font-weight: bold
	span
		display block
		font-size: 40px
		font-family: Gk
		font-weight: 900
		text-transform uppercase
.main-text
	font-size: 24px
	margin 30px 0 40px
.mails
	width 100%
	max-width 500px
	background-color: #f0f0f0
	padding 20px
	border-radius: 7px
	box-shadow: 0px 0px 13px 10px rgba(255, 255, 255, 0.15);
	display: flex;
	align-items: center;
	justify-content: space-between;
.email-img
	display block
	margin 0 auto
	width 70px

@import 'base/3-footer'
@import 'main/8-medias'