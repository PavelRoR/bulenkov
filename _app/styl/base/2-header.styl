header
	overflow hidden
	padding 10px 0
	margin-bottom: 60px
.header-logo
	float left
.contacts
	float: right
	text-align left
	padding 13px 0 0
	&-footer
		width 100%
		max-width 890px
		margin 0 auto
.contact
	display inline-block
	padding-left: 28px
	background-repeat no-repeat
	background-position: left center
	line-height: 1.5
	&-footer
		display block
		text-align left
		a
			font-family: Gd
			font-weight: bold
	&-email
		margin-right: 40px
		background-image url(../img/icons/envelope.png)
	&-tel
		background-image url(../img/icons/tube.png)
	&-adress
		background-image url(../img/icons/gps.png)
		span:last-of-type
			font-size: 16px
			font-family: Gd
			font-weight: bold
			text-transform: none
	span
	a
		color #fff
		display block
	a
		&:focus
			text-decoration none
			color #fff
		&:hover
			text-decoration underline
			color #fff
	span
		text-transform uppercase
		font-size: 12px