*
	margin 0
	padding 0
	outline none
body
	font-size: 16px
	font-family: G
	color #000
	background-color #fff
	line-height: 1.5
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.laptop-wrapper
	position relative
	z-index 50
	&:before
		content ''
		display block
		width 100%
		height 121%
		padding-top: 31.25%
		margin 0 auto
		top -1%
		left -1px
		right 0
		position absolute
		background-image url(../img/images/laptop.png)
		background-repeat no-repeat
		background-position: center
		background-size cover
.video-wrapper
	margin 0 auto
	position relative
	width 90%
	top 0
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 85%
		height 100%
		display block
		background-color #000
		border-radius 5px
		border: 0
		top 3%
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
.button
	display block
	text-align center
	margin 0 auto
	text-decoration none
	color: #fff
	border-radius: 7px
	width: 100%
	max-width: 241px;
	padding 18px 10px
	background-color: #274888
	transition: all .3s ease
	position relative
	z-index 90
	&:focus
		text-decoration none
		color #fff
	&:hover
		text-decoration none
		color #000
		background-color: #60f2e5
	&-form
		background-color: #60f2e5
		color #000
		&:focus
			color #000
		&:hover
			color #fff
			background-color: #274888
.general-title
	font-size: 30px
	font-family: Gd
	font-weight: bold
	margin-bottom: 50px
	position relative
	z-index 50
	&-center
		text-align center