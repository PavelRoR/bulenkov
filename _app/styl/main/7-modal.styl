.white-popup
	position: relative;
	background: #FFF;
	padding: 70px 20px 30px
	width: auto;
	max-width: 500px;
	margin: 20px auto;
	background-image url(../img/backs/modal.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	border-radius: 7px
	box-shadow: 0px 0px 33.44px 4.56px rgba(45, 45, 47, 0.15);
.form-modal
	position relative
.form-title-modal
	width 100%
	max-width 320px
	margin 0 auto
	top -95px
	left 0
	right 0
	text-align center
	position absolute
	padding 10px
	background-color: #206e9a
	background-image linear-gradient(to left, #206e9a, #206e9a)
	border-radius: 7px
.input-mail-modal
	float: none
	display block
	margin 0 auto 10px
	width 100%
	max-width 290px
.button-form-modal
	float: none
	display block
	margin 0 auto
	width 100%
	max-width 290px
.checking-modal
	max-width 300px
	.check-label
		line-height: 18px
.mfp-fade.mfp-bg
	opacity: 0;
	transition: all 0.2s ease-out;

/* overlay animate in */
.mfp-fade.mfp-bg.mfp-ready
	opacity: 0.95

/* overlay animate out */
.mfp-fade.mfp-bg.mfp-removing
	opacity: 0;


/* content at start */
.mfp-fade.mfp-wrap .mfp-content
	opacity: 0;
	transition: all 0.65s ease-out;

/* content animate it */
.mfp-fade.mfp-wrap.mfp-ready .mfp-content
	opacity: 1;

/* content animate out */
.mfp-fade.mfp-wrap.mfp-removing .mfp-content
	opacity: 0;
.mfp-close-btn-in .mfp-close
	color #206e9a
	width 44px
	height 44px
	line-height: 44px
	top - 15px
	right -40px
	font-size: 44px
	font-family: R
	font-weight: normal
	opacity 1
	transition: all .3s ease
	&:hover
		transform: rotate(45deg)