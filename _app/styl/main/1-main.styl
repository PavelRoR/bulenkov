#main
	padding 0
	color #fff
	background-color: #19789F
	background-image url(../img/backs/main.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
.main-wrapper
	overflow hidden
	width 100%
.main-title
	position relative
	padding-top: 50px
	font-size: 35px
	font-family: Gk
	font-weight: 900
	small
		position absolute
		padding 10px 20px
		background-color: #2a2f47
		border-radius: 7px
		text-transform uppercase
		text-align center
		display inline-block
		top 0
		left auto
		right 0
		font-size: 16px
.main-subtitle
	font-size: 22px
	margin 30px 0
.main-info
	position relative
	padding 15px 30px 15px 50px
	border-radius: 5px
	border: 1px solid #f7ffff
	display inline-block
	&:before
		content: ''
		display block
		position absolute
		border-radius: 50px
		background-color: #2A2F47
		width 50px
		height 50px
		background-image url(../img/icons/calendar.png)
		background-repeat no-repeat
		background-position: center
		left -25px
		top calc(50% - 25px)
.main-img
	position relative
	padding-top: 90%
	// overflow hidden
	img
		position absolute
		bottom:  -50px
		left -250px
.main-form-wrapper
	position relative
	// overflow hidden
	&:before
		content: ''
		display block
		position absolute
		left 0
		right 0
		top -31px
		bottom: -7px
		width 96%
		height 100px
		background-color: #60f2e5
		border-radius: 7px
		margin 0 auto
		z-index 0
.form-main
	position absolute
	z-index 20
	left 0
	right 0
	margin 0 auto
	bottom: -60px
	width 100%
	border-radius: 7px
	background-color: #206e9a
	padding: 20px 150px
.form-title
	font-size: 25px
	font-family: Gd
	font-weight: bold
	text-transform uppercase
	color #fff
	text-align center
	width 200px
	&-main
		float left
		margin-top: 15px
.form-container
	float: right
	width 100%
	max-width 520px
.input
	border-radius: 7px
	border: 1px solid #afafb0
	background-color: transparent
	padding 17px 10px 17px 50px
	color #fff
	&-mail
		background-image url(../img/icons/envelope.png)
		background-repeat no-repeat
		background-position: left 20px center
		&-main
			float left
.button-form-main
	float: right
@-webkit-keyframes autofill
	to
		font-size: 20px
		color: #000;
		background-color: #fff
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.alert-message {
	clear both
	display: none;
	font-size: 16px;
	padding-top: 10px;
	color: #f00
	text-align: center
	font-family: Gd
	font-weight: 600
	line-height: 1
}
.checking {
	display: table;
	width 100%
	max-width 515px
	margin: 5px auto 0
	text-align: left
}
.checking-main
	margin-left: 0
.checking .check-label {
	line-height: 40px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 40px;
	text-align: left;
	font-size: 14px
	font-weight: 100
	color #fff
}

.checking .check-label a
	text-decoration: none
	border-bottom: 1px dashed
	display: inline
	color #fff
	&:focus
		border-bottom: 1px dashed
		color #fff
	&:hover
		border-bottom: none
		text-decoration: none
		color #fff

.checking .check-label:before {
	content: '';
	background-color: #60f2e5
	position: absolute;
	left: 0;
	top: 3px;
	width: 31px;
	height: 31px;
	border none
	border-radius: 7px
}

.checking .check-label:after {
	content: '';
	position: absolute;
	left: 10px;
	top: -10px;
	width: 11px;
	height: 18px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 2px solid #000
	border-right: 2px solid #000
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;

}

.check {
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
}

.check:checked + .check-label:before {
	background-color: #60f2e5

}

.check:checked + .check-label:after {
	opacity: 1;
	top: 7px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
}
