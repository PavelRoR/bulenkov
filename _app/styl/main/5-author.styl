#author
	padding 160px 0 90px
	position relative
	z-index 50
.author
	background-color: #f0f0f0
	padding 50px 500px 50px 30px
	position relative
	margin-bottom: 150px
	&-title
		font-size: 30px
		font-family: Gd
		font-weight: bold
		small
			display block
			font-size: 18px
			text-transform uppercase
			margin 10px 0 30px
	&-list
		li
			list-style none
			span
				font-family: Gd
				font-weight: bold
			&:nth-child(3)
				margin 15px 0
	&-img
		position absolute
		right: 0
		bottom: -100px
		width 100%
		max-width 490px
		display block
	&-about
		background-color #fff
		border-radius: 7px;
		box-shadow: 0px 0px 33.44px 4.56px rgba(45, 45, 47, 0.15);
		padding 20px 30px
		&-1
			margin 0 0 28px
		&-text
			margin-bottom: 10px
			&:last-child
				margin-bottom: 0
			span
				font-family: Gd
				font-weight: bold
		&-list
			list-style none